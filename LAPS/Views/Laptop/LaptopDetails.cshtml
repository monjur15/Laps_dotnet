<script src="~/Scripts/eAzolution/LaptopJs/LaptopDetails.js"></script>


<div class="divDetails">
    <div class="k-block">
        <h2 class="k-header centerAlign">Laptop Details</h2>
        <input type="hidden" id="hdnLaptopId" />
        <ul>
            <li>
                <label class="lbl widthSize20_per rightAlign">Laptop Model</label>
                <input class="k-textbox" id="txtModelName" />
            </li>
            <li>
                <label class="lbl widthSize20_per rightAlign">Brand</label>
                <input id="cLpBrand" />
            </li>
            <li>
                <label class="lbl widthSize20_per rightAlign">Color</label>
                <input id="cLpColor" />
            </li>
            <li>
                <label class="lbl widthSize20_per rightAlign">Price</label>
                <input class="k-textbox" id="txtPrice" />
            </li>
            <li>
                <label class="lbl widthSize20_per rightAlign">Windows 11</label>
                <input type="radio" name="IsW" id="wyes" value="1" /> Yes
                <input type="radio" name="IsW" id="wno" value="0" /> No
            </li>

            <li>
                <label class="lbl widthSize20_per rightAlign">Latest Version</label>
                <input type="checkbox" id="chkIsLatest" name="IsActive" class="k-checkbox" />

            </li>
            <li class="accept">
                <button id="btnSave" class="k-button" type="submit">Save</button>
                <button id="btnClearAll" class="k-button">Clear</button>
                <button id="btnDelete" class="k-button">Delete</button>
                <button id="hdnUpdate" class="k-button" style="display: none;">Update</button>
            </li>

        </ul>
    </div>

</div>
