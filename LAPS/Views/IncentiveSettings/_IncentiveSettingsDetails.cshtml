@Scripts.Render("~/Scripts/eAzolution/Sales/IncentiveSettings/IncentiveSettingsDetails.js")

<div class="divDetails" id="IncentiveDetailsDiv">
  
    <div class="k-block">
          <h2 class="k-header centerAlign">Incentive Details</h2>
        <ul>
            <li>
                <input type="hidden" id="hdnIncentiveId" value="0" />
                <label for="NumberOfSale" class="lbl widthSize25_per">Number of Sale Per Month:</label>
                <input type="number" id="txtNumberOfSale" maxlength="300" min="0" name="NumberOfSale" required validationmessage="Please enter Number of Sale"  />
            </li>
            <li>
                <label for="IncentiveAmount" class="lbl widthSize25_per">Incentive Amount:</label>
                <input type="number" id="txtIncentiveAmount" maxlength="200000" min="0" name="IncentiveAmount"  required validationmessage="Please enter Incentive Amount" />
            </li>
            <li>
                <label for="IsActive" class="lbl widthSize25_per">Is Active:</label>
                <input type="checkbox" id="chkIsActive" name="IsActive" class="k-checkbox" />
            </li>

            <li class="accept">
                <button id="btnSave" class="k-button" type="submit" onclick="">Save</button>
                &nbsp;&nbsp;
                <button id="btnClearAll" class="k-button" onclick="IncentiveSettingsDetailsHelper.ClearIncentiveDetailsForm();"><span class="k-icon k-i-refresh"></span>Clear</button>
            </li>
            <li class="status"></li>
        </ul>
    </div>
</div>
